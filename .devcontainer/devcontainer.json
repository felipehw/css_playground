// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.195.0/containers/javascript-node
{
	"name": "Node.js",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick a Node version: 16, 14, 12.
		// Append -bullseye or -buster to pin to an OS version.
		// Use -bullseye variants on local arm64/Apple Silicon.
		"args": { "VARIANT": "18-bullseye" }
	},

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				// Extension: Better Comments
				"better-comments.tags": [
					{
						// Original modified ("#FF2D00" â†’ "#FFC200")
						"tag": "!",
						"color": "#FFC200",
						"strikethrough": false,
						"underline": false,
						"backgroundColor": "transparent",
						"bold": false,
						"italic": false
					},
					{
						// New
						"tag": "fixme",
						"color": "#FF2D00",
						"strikethrough": false,
						"underline": false,
						"backgroundColor": "transparent",
						"bold": false,
						"italic": false
					},
					{
						// Original
						"tag": "?",
						"color": "#3498DB",
						"strikethrough": false,
						"underline": false,
						"backgroundColor": "transparent",
						"bold": false,
						"italic": false
					},
					{
						// Original
						"tag": "//",
						"color": "#474747",
						"strikethrough": true,
						"underline": false,
						"backgroundColor": "transparent",
						"bold": false,
						"italic": false
					},
					{
						// Original
						"tag": "todo",
						"color": "#FF8C00",
						"strikethrough": false,
						"underline": false,
						"backgroundColor": "transparent",
						"bold": false,
						"italic": false
					},
					{
						// Original
						"tag": "*",
						"color": "#98C379",
						"strikethrough": false,
						"underline": false,
						"backgroundColor": "transparent",
						"bold": false,
						"italic": false
					}
				]
			},

			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"aaron-bond.better-comments", // Better Comments
				"dbaeumer.vscode-eslint", // ESLint
				"donjayamanne.githistory", // Git History
				"eamodio.gitlens", // GitLens
				"esbenp.prettier-vscode", // Prettier
				"Gruntfuggly.todo-tree", // Todo Tree
				"naumovs.color-highlight", // Color Highlight
				"redhat.vscode-yaml" // YAML
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [3000],

	// Use 'portsAttributes' to set default properties for specific forwarded ports. More info: https://code.visualstudio.com/docs/remote/devcontainerjson-reference.
	"portsAttributes": {
		"3000": {
			"label": "Application port",
			"onAutoForward": "notify"
		}
	},

	// Use 'otherPortsAttributes' to configure any ports that aren't configured using 'portsAttributes'.
	// "otherPortsAttributes": {
	// 		"onAutoForward": "silent"
	// },

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm install && if [ -x './.devcontainer/custom-setup.sh' ]; then ( cd ./.devcontainer/ && ./custom-setup.sh ); else echo 'Without additional setup. Bye'; fi",

	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node"
}
